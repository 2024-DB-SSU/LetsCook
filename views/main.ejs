<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Let's Cook</title>
  <link rel="stylesheet" href="/main.css">
</head>

<body>
  <!-- 상단 제목 -->
  <header>
    <h1>Let's Cook</h1>
  </header>

  <div class="container">
    <!--왼쪽 영역(냉장고)-->
    <div class="left-side">
      <h2>My 냉장고</h2>
      <div class="fridge">
        <!--필수 재료 냉장고-->
        <div class="fridge-section top">
          <div class="label essential">필수 재료</div>
          <% for(let ingred of ingreds) { %>
            <% if(ingred.Status === 1) { %>
              <div class="button change_status" id="0">
                <p><%= ingred.Name %></p>
                <p><%= ingred.remainingDays %></p>
              </div> 
            <% } %>
          <% } %>
        </div>
        <!--전체 재료 냉장고-->
        <div class="fridge-section bottom">
          <div class="label all">전체 재료</div>
          <% for(let ingred of ingreds) { %>
            <% if(ingred.Status === 0) { %>
              <div class="button change_status" id="1">
                <p><%= ingred.Name %></p>
                <p><%= ingred.remainingDays %></p>
              </div> 
            <% } %>
          <% } %>
        </div>
    </div>
  </div>

  <!--오른쪽 영역(버튼)-->
  <div class="right-side">
    <div class="button-row">
        <a href="/add_ingred" class="button">재료 등록</a>
        <a href="/recommend/previous" class="button">이전 검색</a>
    </div>
    <div class="button-row">
        <!--좋아요를 a태그로-->
        <a href="/likes" class="button">좋아요</a>
        <!-- <button onclick="navigate('좋아요')" class="button">좋아요</button> -->
        <button onclick="navigate('레시피 보기')" class="button">레시피 보기</button>
    </div>
    <div class="large-button">
        <a href="/recommend" class="button large">레시피 추천</a>
    </div>
</div>

  <!-- 로그아웃 버튼-->
  <footer>
    <a href="/log_out" class="logout-button">로그아웃</a>
  </footer>


  <!-- ajax -->
  <script>
    // script안에서 ejs 문법 쓰려면 문자열로 써야함!
    document.querySelectorAll('.change_status').forEach(function(button){
      button.addEventListener('click', function(){
        let ingred_name = button.querySelector('p').textContent
        fetch(`/add_ingred/change_status?ingred_name=${ingred_name}&ingred_status=${Number(button.getAttribute('id'))}`, { method : 'GET' })
        .then((r)=>r.text())
        .then((r)=>{
          // 기존 태그와 새로운 부모 노드 선택
          const elementToMove = button; 
          let txt = null;

          if(Number(button.getAttribute('id')) === 1) {
            txt = ".top";
            button.setAttribute('id','0')
          }
          else{
            txt = ".bottom"
            button.setAttribute('id','1')
          }
          const newParent = document.querySelector(txt);
          console.log(newParent)

          // 요소를 새로운 부모에 추가
          newParent.appendChild(elementToMove);
        })
      })
    })
      
  </script>
</body>
</html>